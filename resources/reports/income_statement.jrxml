	<queryString>
		<![CDATA[SELECT 
            fcc.name as class_name,
            fc.name as category_name,
            v.vote_code as code, 
            v.description as account_name_detail,
            COALESCE((
                SELECT SUM(CASE WHEN fcc_curr.name = 'Revenue' THEN gj_curr.credit - gj_curr.debit ELSE gj_curr.debit - gj_curr.credit END)
                FROM general_journals gj_curr
                JOIN votes v_curr ON gj_curr.vote_id = v_curr.id
                JOIN financial_category_classes fcc_curr ON v_curr.financial_category_class_id = fcc_curr.id
                WHERE gj_curr.vote_id = v.id AND gj_curr.trans_date BETWEEN $P{date_from} AND $P{date_to}
            ), 0) as amount,
            COALESCE((
                SELECT SUM(CASE WHEN fcc_py.name = 'Revenue' THEN gj_py.credit - gj_py.debit ELSE gj_py.debit - gj_py.credit END)
                FROM general_journals gj_py
                JOIN votes v_py ON gj_py.vote_id = v_py.id
                JOIN financial_category_classes fcc_py ON v_py.financial_category_class_id = fcc_py.id
                WHERE gj_py.vote_id = v.id AND gj_py.trans_date BETWEEN DATE_SUB($P{date_from}, INTERVAL 1 YEAR) AND DATE_SUB($P{date_to}, INTERVAL 1 YEAR)
            ), 0) as py_amount,
            COALESCE((
                SELECT vb.budget FROM vote_budgets vb WHERE vb.vote_id = v.id AND vb.year = $P{financial_year} LIMIT 1
            ), 0) as budget_amount,
            fcc.reporting_order as class_order
        FROM votes v
        JOIN financial_category_classes fcc ON v.financial_category_class_id = fcc.id
        JOIN financial_categories fc ON v.financial_category_id = fc.id
        WHERE fcc.name IN ('Revenue', 'Expenses', 'Cost of Sales')
        GROUP BY v.id, fcc.name, fc.name, v.vote_code, v.description, fcc.reporting_order, fc.reporting_order
        HAVING amount != 0 OR py_amount != 0 OR budget_amount != 0
        ORDER BY fcc.reporting_order, fc.reporting_order, v.vote_code ASC]]>
	</queryString>
