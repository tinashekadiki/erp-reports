	<queryString>
		<![CDATA[SELECT 
            fcc.name as class_name,
            fcs.name as sub_class_name,
            fc.name as category_name,
            v.vote_code as code, 
            CASE 
                WHEN v.description LIKE '%(%)%' THEN TRIM(REPLACE(SUBSTRING_INDEX(v.description, '(', -1), ')', ''))
                ELSE v.description
            END as account_desc,
            CASE 
                WHEN fcc.name = 'Assets' THEN COALESCE((SELECT SUM(gj_curr.debit - gj_curr.credit) FROM general_journals gj_curr WHERE gj_curr.vote_id = v.id AND gj_curr.trans_date <= $P{date_to}), 0)
                ELSE COALESCE((SELECT SUM(gj_curr.credit - gj_curr.debit) FROM general_journals gj_curr WHERE gj_curr.vote_id = v.id AND gj_curr.trans_date <= $P{date_to}), 0)
            END as balance,
            CASE 
                WHEN fcc.name = 'Assets' THEN COALESCE((SELECT SUM(gj_py.debit - gj_py.credit) FROM general_journals gj_py WHERE gj_py.vote_id = v.id AND gj_py.trans_date <= DATE_SUB($P{date_to}, INTERVAL 1 YEAR)), 0)
                ELSE COALESCE((SELECT SUM(gj_py.credit - gj_py.debit) FROM general_journals gj_py WHERE gj_py.vote_id = v.id AND gj_py.trans_date <= DATE_SUB($P{date_to}, INTERVAL 1 YEAR)), 0)
            END as py_balance,
            COALESCE((SELECT vb.budget FROM vote_budgets vb WHERE vb.vote_id = v.id AND vb.year = $P{financial_year} LIMIT 1), 0) as budget_balance,
            fcc.reporting_order as class_order,
            fcs.reporting_order as sub_class_order,
            fc.reporting_order as category_order
        FROM votes v
        JOIN financial_categories fc ON v.financial_category_id = fc.id
        JOIN financial_category_sub_classes fcs ON fc.financial_category_sub_class_id = fcs.id
        JOIN financial_category_classes fcc ON fcs.financial_category_class_id = fcc.id
        WHERE fcc.name IN ('Assets', 'Liabilities', 'Equity')
        GROUP BY v.id, fcc.name, fcs.name, fc.name, v.vote_code, v.description, fcc.reporting_order, fcs.reporting_order, fc.reporting_order
        HAVING balance != 0 OR py_balance != 0 OR budget_balance != 0
        ORDER BY 
            CASE WHEN fcc.name = 'Assets' THEN 1 ELSE 2 END,
            CASE 
                WHEN fcs.name LIKE '%Non%Current%Asset%' THEN 1
                WHEN fcs.name LIKE '%Current%Asset%' THEN 2
                WHEN fcs.name LIKE '%Equity%' THEN 3
                WHEN fcs.name LIKE '%Non%Current%Liab%' THEN 4
                WHEN fcs.name LIKE '%Current%Liab%' THEN 5
                ELSE 99
            END,
            fcs.reporting_order, 
            fc.reporting_order, 
            v.vote_code ASC]]>
	</queryString>
