	<queryString>
		<![CDATA[SELECT 
            'Opening Balance' as description,
            NULL as trans_date,
            'OB' as reference,
            CASE WHEN COALESCE(ob.opening_balance, 0) > 0 THEN ABS(ob.opening_balance) ELSE 0 END as debit,
            CASE WHEN COALESCE(ob.opening_balance, 0) < 0 THEN ABS(ob.opening_balance) ELSE 0 END as credit,
            v.description as account_name,
            v.vote_code as account_code,
            1 as is_opening
        FROM votes v
        LEFT JOIN (
            SELECT vote_id, SUM(debit - credit) as opening_balance
            FROM general_journals
            WHERE trans_date < $P{date_from}
            GROUP BY vote_id
        ) ob ON v.id = ob.vote_id
        WHERE ($P{vote_id} IS NULL OR v.id = $P{vote_id})
        AND (COALESCE(ob.opening_balance, 0) != 0 OR EXISTS (SELECT 1 FROM general_journals WHERE vote_id = v.id AND trans_date BETWEEN $P{date_from} AND $P{date_to}))

        UNION ALL

        SELECT 
            gj.description,
            gj.trans_date,
            COALESCE(gj.receipt_number, gj.type, 'N/A') as reference,
            gj.debit,
            gj.credit,
            v.description as account_name,
            v.vote_code as account_code,
            0 as is_opening
        FROM general_journals gj
        JOIN votes v ON gj.vote_id = v.id
        WHERE gj.trans_date BETWEEN $P{date_from} AND $P{date_to}
        AND ($P{vote_id} IS NULL OR gj.vote_id = $P{vote_id})

        ORDER BY account_code, is_opening DESC, trans_date ASC]]>
	</queryString>
